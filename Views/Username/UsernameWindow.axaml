<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SharpClient.UsernameWindow"
        Width="300" Height="150"
        Title="Enter Username">
    <StackPanel Margin="10">
        <TextBlock Text="Please enter your username:" Margin="0,0,0,10"/>
        <TextBox Name="UsernameInput" Width="250" Height="30" Margin="0,0,0,10"/>
        <Button Content="OK" Width="100" Height="30" HorizontalAlignment="Center" Click="OnOkClick"/>
    </StackPanel>
</Window>